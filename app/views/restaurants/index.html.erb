<h1>Seat Yourself!</h1>

<% if is_owner? %>
	<%= link_to "Add a New Restaurant",  new_restaurant_url %>
<% end %>

<h3>All Restaurants</h3>
<ul>
	<% @restaurants.each do |restaurant| %>
		<li>
			<%= link_to restaurant.name, restaurant_path(restaurant) %></br>
			<%= image_tag restaurant.picture %> </br>
			<%= restaurant.location %> </br>
			<%= restaurant.phone_number %> </br>
			<%= restaurant.open_hours %> </br>
			<%= restaurant.description %> </br>
			<%= restaurant.menu %> </br>
			<%= restaurant.price_range %> </br>
			<%= restaurant.capacity %> </br>
			
		</li>
	<% end %>
</ul>