<%= form_for([@restaurant, @reservation]) do |f| %>
	<% if @reservation.errors.any? %>
		<div id="error_explanation">
			<h3>
				Whoops!
				<%= pluralize(@reservation.errors.count, "error")%>
				prohibited this reeservation from being saved:
			</h3>
			<ul>
				<% @reservation.errors.full_messages.each do |message|%>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div id="field">
		<%= f.label :date %></br>
		<%= f.date_field :date %></br></br>
	</div>
	<div id="field">
		<%= f.label :time %></br>
		<%= f.select(:time, reservation_time_select(@restaurant)) %></br></br>
	</div>
	<div id="field">
		<%= f.label :party_size %></br>
		<%= f.number_field :party_size %></br></br>
	</div>
	<div id="actions">
		<%= f.submit class: "button" %>
	</div>
<% end %>